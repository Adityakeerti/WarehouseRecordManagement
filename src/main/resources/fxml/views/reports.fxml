<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recursiveMind.WareHouseRecordManagement.controller.ReportsViewController"
      spacing="20" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Stock Movement Reports" styleClass="section-title"/>

    <TableView fx:id="stockMovementTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="productColumn" text="Product" prefWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="referenceColumn" text="Reference" prefWidth="150"/>
            <TableColumn fx:id="userColumn" text="User" prefWidth="120"/>
            <TableColumn fx:id="notesColumn" text="Notes" prefWidth="200"/>
        </columns>
    </TableView>
</VBox> 